<% include partials/header %>
<content>
    <h1 data-query='<%= query %>' id='query'>Star Search for '<%= query %>'</h1>
    <% if(results.length == 0) { %>
        <p class='result'>The universe has no results for your query...</p>
    <% } else { %>
        <p class='result'>There are <%= results.length %> results.</p>
    <% }; %>
    <div id='pod'>
        <% results.slice(0, 15).forEach(function(item){ %>
            <% if(item.data[0].media_type !== 'video'){ %>
                <a class='item' href='/search/<%= item.data[0].nasa_id %>'>
                    <img class='img' src="<%= item.links[0].href %>"></img>
                    <h4 class='title'><%= item.data[0].title %></h4>
                    <p class='desc'><%= item.data[0].description.substring(0, 120) + "..." %></p>
                </a>
            <% } else { %>
            <% } %>

        <% }); %>
    </div>
</content>
<% if(results.length !== 0) { %>
    <button onclick="seeMore()" id='see-more'>See More</button>
<% } else {} %>
<% include partials/footer %>
